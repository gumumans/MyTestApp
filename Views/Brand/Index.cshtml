@model List<Brand>

@{
    ViewBag.Title = "Brands";
    Layout = "_Layout";
}

<h2>Brands</h2>

<a asp-action="Create" asp-controller="Brand">Добавить Бренд</a>

<div class="table_section">

    @if (@Model.Count == 0)

    {

    <p>Бренды еще не добавлены</p>

    }

    else

    {

    <table style="width: 100%;">

        <tr>

            <th>Id</th>

            <th>Наименование</th>

            <th></th>

        </tr>

        @foreach (var brand in @Model)

        {

        <tr>

            <td>@brand.Id</td>

            <td>@brand.Name</td>

            <td>
                
            </td>

        </tr>

        }



    </table>

    }

</div>

